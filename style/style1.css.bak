.grid{
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	grid-template-rows: repeat(3, 1fr);
	grid-gap: 1em;
    height:0px;
}
.grid > *{
    padding-top:2em;
    background:#f0f8ff;
    border-radius:1em;
    padding:1em;
}
.grid button{
    background:#f0f8ff;
    border:none;
    border-radius:1em;
    padding:1em;
}
.grid button:hover{
    animation:changeColor .5s forwards;
}
