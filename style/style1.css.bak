  }
}*/
@keyframes changeColor {
  0% {
    background-color:#f0f8ff;
    color:#000;
  }
  100% {
    background-color:#589ce0;
    color:#fff;
  }
}
@keyframes changeFontSize {
  0% {
    font-size:1.5em;
  }
  100% {
    font-size:2em;
  }
}
                                /*test*/              
.form_radio_btn {
	display: inline-block;
	margin-right: 1em;
    margin:.5em;
    background: #bde0ff;
    border-radius: .5em;
}
.form_radio_btn:hover{
    animation:changeColor .5s forwards;
}
.form_radio_btn input[type=radio] {
	display: none;
}
.form_radio_btn label {
	display: inline-block;
	cursor: pointer;
	padding: .5em;
    border-radius: .5em;
	user-select: none;
}
/* Checked */
.form_radio_btn input[type=radio]:checked + label {
	background: #589ce0;
}
/* Hover 
.form_radio_btn label:hover {
	color: #666;*/
}
/* Disabled */
.form_radio_btn input[type=radio]:disabled + label {
	background: #1c8f99;
	color: #f9ffe8;
}
